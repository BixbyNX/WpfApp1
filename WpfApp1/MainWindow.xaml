<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="/loginbackzxc.png"/>
    </Window.Background>
    <Grid x:Name="LogInWindow" Width="1280">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="704" VerticalAlignment="Center" Width="540" Source="/shet.png">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Label Content="LOG IN" HorizontalAlignment="Left" Margin="640,126,0,0" VerticalAlignment="Top" Height="112" Width="271" FontSize="75" FontWeight="Bold" Foreground="#FF242424"/>
        <Label Content="USERNAME" HorizontalAlignment="Left" Margin="656,280,0,0" VerticalAlignment="Top" Height="36" Width="121" FontSize="20" FontWeight="Bold"/>
        <Label Content="PASSWORD" HorizontalAlignment="Left" Margin="656,370,0,0" VerticalAlignment="Top" Height="36" Width="121" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtboxusername" HorizontalAlignment="Left" Margin="640,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Height="45" FontSize="20" BorderThickness="0,0,0,0" Padding="8,7,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/txtb.png"/>
            </TextBox.Background>
        </TextBox>
        <PasswordBox x:Name="passbox" HorizontalAlignment="Left" Margin="641,406,0,0" VerticalAlignment="Top" Width="330" Height="45" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <PasswordBox.Background>
                <ImageBrush ImageSource="/txtb.png"/>
            </PasswordBox.Background>
        </PasswordBox>
        <Button x:Name="btnLogIn" Content="LOG IN" HorizontalAlignment="Left" Margin="716,494,0,0" VerticalAlignment="Top" Height="40" Width="180" FontWeight="Bold" FontSize="15" Cursor="Hand" BorderThickness="0,0,0,0" Foreground="White" Click="btnLogIn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/buttonzxc.png"/>
            </Button.Background>
        </Button>
        <Label Content="ENCRYPTALK" HorizontalAlignment="Left" Margin="59,281,0,0" VerticalAlignment="Top" Height="112" Width="399" FontSize="55" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF242424"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="769,546,0,0" VerticalAlignment="Top" Width="72" Click="btnRegister_Click" FontSize="15" FontWeight="Bold" BorderThickness="0,0,0,0" Background="{x:Null}"/>
        <Button x:Name="btnForgot" Content="Forgot Password" HorizontalAlignment="Left" Margin="846,417,0,0" VerticalAlignment="Top" Width="122" Click="btnForgot_Click" FontSize="15" BorderThickness="0,0,0,0" Background="{x:Null}" Foreground="#BF000000"/>
        <Label x:Name="txtinvalid" Content="Invalid serial number or password." HorizontalAlignment="Left" Margin="654,451,0,0" VerticalAlignment="Top" Height="28" Width="242" FontSize="15" Foreground="#FFED4337"/>
        <Label x:Name="txtTimerpass" Content="Login blocked, time remaining:" HorizontalAlignment="Left" Margin="654,451,0,0" VerticalAlignment="Top" Height="28" Width="286" FontSize="15" Foreground="#FFED4337"/>
        <Label x:Name="txtMsgErr" Content="Input Username or Password." HorizontalAlignment="Left" Margin="654,451,0,0" VerticalAlignment="Top" Height="28" Width="286" FontSize="15" Foreground="#FFED4337"/>
        <Canvas x:Name="forgotTAB" Margin="240,160,240,160" Width="800" Height="400" d:IsHidden="True">
            <Canvas.Background>
                <ImageBrush ImageSource="/tabzxc.png"/>
            </Canvas.Background>
            <Button x:Name="btnForgotYes" Content="YES" Height="40" Width="100" FontWeight="Bold" FontSize="15" Cursor="Hand" BorderThickness="0,0,0,0" Foreground="White" Click="btnForgotYes_Click" HorizontalAlignment="Center" Canvas.Left="288" Canvas.Top="281" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/agree.png"/>
                </Button.Background>
            </Button>
            <Label Content="Request appointment" Height="115" Width="658" FontSize="45" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF242424" HorizontalAlignment="Center" Canvas.Left="71" Canvas.Top="69" VerticalAlignment="Top"/>
            <Label Content="for password reset?" Height="116" Width="658" FontSize="45" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF242424" Canvas.Left="71" Canvas.Top="132" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="btnForgotNo" Content="NO" Height="40" Width="100" FontWeight="Bold" FontSize="15" Cursor="Hand" BorderThickness="0,0,0,0" Foreground="White" Click="btnForgotNo_Click" Canvas.Left="410" Canvas.Top="281" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/red.png"/>
                </Button.Background>
            </Button>
        </Canvas>
    </Grid>
</Window>
