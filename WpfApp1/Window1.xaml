<Window x:Name="RegistrationWindow" x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="720" Width="1280" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/loginbackzxc.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="704" VerticalAlignment="Center" Width="546" Source="/shet.png">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Label Content="REGISTRATION" HorizontalAlignment="Left" Margin="630,49,0,0" VerticalAlignment="Top" Height="112" Width="568" FontSize="75" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF242424"/>
        <Label Content="FULL NAME" HorizontalAlignment="Left" Margin="640,183,0,0" VerticalAlignment="Top" Height="36" Width="121" FontSize="20" FontWeight="Bold"/>
        <Label Content="EMAIL ADDRESS" HorizontalAlignment="Left" Margin="927,182,0,0" VerticalAlignment="Top" Height="36" Width="166" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="btnRegister" Content="REGISTER" HorizontalAlignment="Left" Margin="824,614,0,0" VerticalAlignment="Top" Height="40" Width="180" FontWeight="Bold" FontSize="15" Cursor="Hand" BorderThickness="0,0,0,0" Foreground="White" Click="btnRegister_Click">
            <Button.Background>
                <ImageBrush ImageSource="/buttonzxc.png"/>
            </Button.Background>
        </Button>
        <Label Content="PASSWORD" HorizontalAlignment="Left" Margin="640,502,0,0" VerticalAlignment="Top" Height="36" Width="166" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="fname" HorizontalAlignment="Left" Margin="640,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="45" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="emailadd" HorizontalAlignment="Left" Margin="927,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="45" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="ENCRYPTALK" HorizontalAlignment="Left" Margin="59,281,0,0" VerticalAlignment="Top" Height="112" Width="399" FontSize="55" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF242424"/>
        <TextBox x:Name="serialIDNo" HorizontalAlignment="Left" Margin="927,428,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="45" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="contact" HorizontalAlignment="Left" Margin="640,428,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="45" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="BRANCH OF SERVICE" HorizontalAlignment="Left" Margin="640,287,0,0" VerticalAlignment="Top" Height="36" Width="294" FontSize="20" FontWeight="Bold"/>
        <Label Content="PERSONNEL TYPE" HorizontalAlignment="Left" Margin="927,287,0,0" VerticalAlignment="Top" Height="36" Width="294" FontSize="20" FontWeight="Bold"/>
        <Label Content="CONTACT NO." HorizontalAlignment="Left" Margin="640,392,0,0" VerticalAlignment="Top" Height="36" Width="294" FontSize="20" FontWeight="Bold"/>
        <Label Content="SERIAL / ID NO." HorizontalAlignment="Left" Margin="927,392,0,0" VerticalAlignment="Top" Height="36" Width="294" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="btnPrivacyPolicy" Content="Privacy Policy" HorizontalAlignment="Left" Margin="859,671,0,0" VerticalAlignment="Top" Width="110" Click="btnPrivacyPolicy_Click" FontSize="15" FontWeight="Bold" BorderThickness="0,0,0,0" Background="{x:Null}"/>
        <PasswordBox x:Name="passwordb" HorizontalAlignment="Left" Margin="640,538,0,0" VerticalAlignment="Top" Width="250" Height="44" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <PasswordBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </PasswordBox.Background>
        </PasswordBox>
        <Image HorizontalAlignment="Left" Height="45" Margin="640,347,0,0" VerticalAlignment="Top" Width="250">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/tupipti.png"/>
            </Image.OpacityMask>
        </Image>
        <TextBox x:Name="branch" HorizontalAlignment="Left" Margin="640,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="44" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="personneltype" HorizontalAlignment="Left" Margin="927,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="44" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </TextBox.Background>
        </TextBox>
        <PasswordBox x:Name="confirmpass" HorizontalAlignment="Left" Margin="927,536,0,0" VerticalAlignment="Top" Width="250" Height="44" BorderThickness="0,0,0,0" FontSize="20" Padding="8,7,0,0">
            <PasswordBox.Background>
                <ImageBrush ImageSource="/tupipti.png"/>
            </PasswordBox.Background>
        </PasswordBox>
        <Label Content="CONFIRM PASSWORD" HorizontalAlignment="Left" Margin="927,500,0,0" VerticalAlignment="Top" Height="36" Width="220" FontSize="20" FontWeight="Bold"/>
        <Canvas x:Name="verificationTAB" Margin="240,160,240,160" Width="800" Height="400" d:IsHidden="True">
            <Canvas.Background>
                <ImageBrush ImageSource="/tabzxc.png"/>
            </Canvas.Background>
            <Button x:Name="btnSubmitOTP" Content="Submit" Height="40" Width="100" FontWeight="Bold" FontSize="15" Cursor="Hand" BorderThickness="0,0,0,0" Foreground="White" Click="btnSubmitOTP_Click" HorizontalAlignment="Left" Canvas.Left="350" Canvas.Top="332" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/agree.png"/>
                </Button.Background>
            </Button>
            <Label Content="We've sent your code to:" Height="112" Width="658" FontSize="45" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF242424" HorizontalAlignment="Center" Canvas.Left="71" Canvas.Top="37" VerticalAlignment="Top"/>
            <TextBox x:Name="otpverify" TextWrapping="Wrap" Width="270" Height="70" BorderThickness="0,0,0,0" FontSize="50" TextAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" Canvas.Left="265" Canvas.Top="234" VerticalAlignment="Top" Cursor="None">
                <TextBox.Background>
                    <ImageBrush ImageSource="/otpp.png"/>
                </TextBox.Background>
            </TextBox>
            <TextBox x:Name="emailShow" Canvas.Left="84" TextWrapping="Wrap" Canvas.Top="136" Width="632" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="0,0,0,0" Background="{x:Null}" TextAlignment="Center" Foreground="#FF242424" IsEnabled="False"/>
        </Canvas>
        <Button Content="" HorizontalAlignment="Left" Margin="556,23,0,0" VerticalAlignment="Top" Height="40" Width="40" BorderThickness="0,0,0,0" Foreground="White" FontSize="15" FontWeight="Bold" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/back.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
